<head>
    {{!-- Reload site every 30 seconds // This is a workaround for websocket --}}
    <meta http-equiv="refresh" content="30">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.9">
</head>

{{!-- Page Navigation --}}
<div class="pageHeader">
    <div class="card">
        <div class="row center">
            <h2 style="font-family: Verdana, Geneva, Tahoma, sans-serif;">CSCI Adler Lab Queue System</h2>
        </div>
        <div class="row center">
            <button class="btn grey darken-3"><a href="/NorthQueue">Go To Adler North</a></button>
            <button class="btn grey darken-3"><a href="/SouthQueue">Go To Adler South</a></button>
        </div>
    </div>
</div>

{{!-- Modal modified from template from https://www.w3schools.com/w3css/w3css_modal.asp --}}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<script>
    document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('select');
    var instances = M.FormSelect.init(elems);
    });
</script>

<div class="column">
    <div class="boardColumn">
        <div class="card">
            <table>
                <thead>
                    <caption>Adler North Queue</caption>
                    <tr>
                        <th>Request Type</th>
                        <th>Name</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each helpRequests}}
                        <tr>
                            <td>{{requestType}}</td>
                            <td>{{studentName}}</td>
                            <td>{{formatDate dateSubmitted 'h:mm:ss a'}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="boardColumn">
        <div class="card">
            <table>
                <thead>
                    <caption>Adler South Queue</caption>
                    <tr>
                        <th>Request Type</th>
                        <th>Name</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each helpRequests}}
                        <tr>
                            <td>{{requestType}}</td>
                            <td>{{studentName}}</td>
                            <td>{{formatDate dateSubmitted 'h:mm:ss a'}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>